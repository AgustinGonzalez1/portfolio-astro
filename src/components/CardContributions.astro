---
interface Props {
  title: string;
  description: string;
  img: string;
  link: string;
}

const { title, description, img, link }: Props = Astro.props;
---

<article class="flex flex-col gap-10 xl:grid xl:grid-cols-2">
  <div
    class="bg-[#1A1A1A] hover:bg-[#333333] hover:translate-y-[-20px] duration-300 flex items-center justify-center rounded-t-xl px-8 pt-8 xl:p-8 xl:rounded-xl"
  >
    <img class="rounded-t-xl xl:rounded-xl w-full" src={img} alt="" />
  </div>
  <div class="flex flex-col gap-10 justify-between">
    <div>
      <h3 class="text-3xl text-white font-manrope font-medium xl:text-3xl">
        {title}
      </h3>
      <p class="text-subtext font-manrope xl:text-lg">{description}</p>
    </div>
    <div
      class="flex gap-1 border-b-2 w-fit border-primary hover:border-subtext duration-300 ease-in-out"
    >
      <a
        href={link}
        class="text-subtext font-manrope"
        rel="noopener noreferrer"
        target="_blank">VISITAR</a
      >
      <img src="/arrow.svg" alt="" />
    </div>
  </div>
</article>
