---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.jsx";
import Projects from "../components/Projects.astro";
import About from "../components/AboutMe.astro";
import Connect from "../components/Connect.astro";
---

<Layout title="INDEX | RAG">
	<div class="px-4 pt-20">
		<Header client:load />
		<div class="w-full h-[1px] bg-[#484848] my-16 md:my-20"></div>
		<Projects />
		<div class="w-full h-[1px] bg-[#484848] my-16 md:my-20"></div>
		<div transition:name="about">
			<About />
		</div>
		<div class="w-full h-[1px] bg-[#484848] my-16 md:my-20"></div>
		<Connect />
		<div class="mt-10"></div>
	</div>
</Layout>
